<div class="item">
	<div class="home__slide">
		<div class="home__slide-cover">
			<div class="img-fit-cover img-responsive img-responsive--portrait">
			<img src="{image-1}" loading="lazy" alt="{title}">
			<a href="{full-link}" class="home__slide-play"></a>
			</div>
		</div>
		<h2 class="home__slide-title">{title}</h2>
		<ul class="home__slide-info">
			<li class="quality"><a href="#">HD 720</a></li>
			<li class="stats"><img src="{THEME}/img/icons/info1.svg" loading="lazy" alt="Просмотров">{views}</li>
			<li class="stats"><img src="{THEME}/img/icons/info2.svg" loading="lazy" alt="Комментариев">{comments-num}</li>
		</ul>
		<div class="home__slide-cat">{link-category}</div>
		<p class="home__slide-text">{short-story limit="250"}</p>
		[rating-type-3]{rating}[/rating-type-3][rating-type-4]{rating}[/rating-type-4]
	</div>
</div>