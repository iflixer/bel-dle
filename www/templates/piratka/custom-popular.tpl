<a class="popular d-flex ai-center" href="{full-link}">
	<div class="popular__img img-fit-cover">
		<img src="[xfvalue_poster_url]?w=85&h=134" loading="lazy" alt="{title}">
	</div>
	<div class="popular__desc flex-grow-1">
		<div class="popular__title line-clamp">{title}</div>
		<div class="poster__subrate">
			[xfgiven_rating_kinopoisk]
			<span class="kp-w">[xfvalue_rating_kinopoisk]</span>
			[/xfgiven_rating_kinopoisk]
			[xfgiven_rating_imdb]
			<span class="imdb-w">[xfvalue_rating_imdb]</span>
			[/xfgiven_rating_imdb]
		</div>
		<ul class="poster__subtitle">
			<li class="ws-nowrap">
				[xfgiven_year][xfvalue_year] | [/xfgiven_year]
				[xfgiven_country] [xfvalue_country][/xfgiven_country]</li>
		</ul>
	</div>
</a>