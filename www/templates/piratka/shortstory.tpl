<a class="poster grid-item d-flex fd-column has-overlay" href="{full-link}">
    <div class="homedef poster__img img-responsive img-responsive--portrait img-fit-cover anim">
        <img src="[xfvalue_poster_url]?w=184&h=265" x="y" loading="lazy" alt="{title}">
        <div class="permanent_overlay"></div>
        <div class="poster_newrate">
            [xfgiven_rating_kinopoisk]
            <span class="kp-w color">[xfvalue_rating_kinopoisk]</span>
            [/xfgiven_rating_kinopoisk]
            [xfgiven_rating_imdb]
            <span class="imdb-w color">[xfvalue_rating_imdb]</span>
            [/xfgiven_rating_imdb]
        </div>
        <div class="poster__btn-info anim pi-center js-show-info"></div>
        <div class="has-overlay__icon anim pi-center"><div class="playbtn"></div></div>
    </div>
    <div class="poster__desc">
        <h3 class="poster__title ws-nowrap">{title}</h3>
        <p class="descsubline nobrpls">
            [xfgiven_year][xfvalue_year], [/xfgiven_year]
            [xfgiven_country] [xfvalue_country][/xfgiven_country]
        </p>
    </div>
</a>
